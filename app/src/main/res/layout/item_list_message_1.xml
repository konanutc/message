<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size5dp"
        android:layout_marginTop="@dimen/size10dp"
        android:layout_marginRight="@dimen/size10dp"
        android:layout_marginBottom="@dimen/size10dp"
        android:background="@color/white"
        android:src="@drawable/ic_user2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/size10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bo_vien_button"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/size20dp"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_list_message_1"
                android:text="@string/newmessage"
                android:textSize="@dimen/size16sp"
                android:padding="@dimen/size10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_date"
                android:text="@string/newmessage"
                android:textSize="@dimen/size8sp"
                android:gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>